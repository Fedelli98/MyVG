<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.myvg.myvg.Controllers.LoginController" prefHeight="600.0" prefWidth="600.0">
    <children>
        <!-- Titolo -->
        <Label text="Login" layoutX="150.0" layoutY="30.0" textAlignment="CENTER">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        
        <!-- Campi di Login -->
        <Label text="Username:" layoutX="70.0" layoutY="100.0" />
        <TextField fx:id="usernameField" layoutX="150.0" layoutY="100.0" prefWidth="200.0" />

        <Label text="Password:" layoutX="70.0" layoutY="150.0" />
        <PasswordField fx:id="passwordField" layoutX="150.0" layoutY="150.0" prefWidth="200.0" />

        <!-- Pulsante Login -->
        <Button text="Login" layoutX="150.0" layoutY="200.0" onAction="#handleLogin" />

        <!-- Separatore o Linea Divisoria -->
        <Separator layoutX="50.0" layoutY="250.0" prefWidth="300.0" />

        <!-- Campi di Registrazione -->
        <Label text="Nuovo utente? Registrati qui:" layoutX="120.0" layoutY="270.0" />

        <Label text="Email:" layoutX="70.0" layoutY="300.0" />
        <TextField fx:id="emailField" layoutX="150.0" layoutY="300.0" prefWidth="200.0" />

        <Label text="Username:" layoutX="70.0" layoutY="350.0" />
        <TextField fx:id="registerUsernameField" layoutX="150.0" layoutY="350.0" prefWidth="200.0" />

        <Label text="Conferma Password:" layoutX="30.0" layoutY="400.0" />
        <PasswordField fx:id="registerPasswordField" layoutX="150.0" layoutY="400.0" prefWidth="200.0" />

        <!-- Pulsante Registrazione -->
        <Button text="Registrati" layoutX="150.0" layoutY="450.0" onAction="#handleRegister" />
    </children>
</AnchorPane>